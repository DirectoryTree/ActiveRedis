{
    "name": "directorytree/activeredis",
    "description": "An ActiveRecord implementation for Redis.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DirectoryTree\\ActiveRedis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DirectoryTree\\ActiveRedis\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Steve Bauman",
            "email": "steven_bauman@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "predis/predis": "^2.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "illuminate/collections": "^9.0|^10.0|^11.0"
    },
    "suggest" : {
        "brick/math": "For decimal cast support"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "pestphp/pest": "^1.0|^2.0|^3.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    }
}
